<div class="auth">
  
<h2>Sign In</h2>

<form id="sign-in" action="<%=session_url%>" method="post">
  <input 
    type="hidden" 
    name="authenticity_token" 
    value="<%=form_authenticity_token%>" />
  
  
  <input 
    type="text" 
    name="user[email]" 
    class="email" 
    placeholder="Email"
    value="" /><br>

  <input 
    type="password" 
    name="user[password]" 
    class="password" 
    placeholder="Password"
    value="" /><br>
  <input type="submit" name="" id="" value="Sign in" class="btn btn-primary"/>
</form>
  
</div>


